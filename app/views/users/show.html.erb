<% provide(:title, "Profile") %>
<div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        Welcome, <%= @user.firstname %>!
                    </a>
                </li>
                <li>
                    <a href="#">Dashboard</a>
                </li>
                <li>
                    <%= link_to "Recaps", recaps_path %>
                </li>
                <li>
                    <%= link_to "Topic In-Depth", in_depth_path %>
                </li>
                <li>
                    <a href="#">Schedules</a>
                </li>
                <li>
                    <%= link_to "About", about_path %>
                </li>
                <li>
                    <%= link_to "FAQs", help_path %>
                </li>
                <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>Simple Sidebar</h1>
                        <p>Welcome to Hooligan. Stay up to date on football news and receive summaries of an in-depth topic on a daily basis. Interact with other football fans. Learn about the game.</p>
                        
                
                        <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Sidebar</a>
                    </div>
                </div>
                <!-- end of row -->
                <div class="row">
                    <aside class="col-md-4">
                        <section class="user-info">
                            <h1>
                                <%= image_tag @user.image.url(:full) %>
                                <%= @user.firstname %>
                            </h1>
                        </section>
                    </aside>
                    <div class="col-md-8">
                        <% if @user.posts.any?%>
                            <h3>Posts (<%= @user.posts.count %>)</h3>
                            <ol class="posts">
                                <%= render @posts %>
                            </ol>
                            <%#= will_paginate @user.posts %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>