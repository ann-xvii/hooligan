<li id="post-<%= post.id %>">
	<%= link_to image_tag(post.user.image.url(:thumb), class: "post-images"), post.user %>
	<span class="user"><%= link_to post.user.firstname, post.user %></span>
	<span class="content">
		<%= post.content %>
		<%= image_tag post.picture.url if post.picture? %>
	</span>
	<span class="timestamp">
		Posted <%= post.date_published %>
		<% if current_user?(post.user) %>
			<%= link_to "delete", post, method: :delete, 
										data: { confirm: "You sure?" } %>
		<% end %>
	</span>
</li>