<div class="container">
	<h1>Football Recaps</h1>

	<!-- <h3>Did you see that ludicrous display last night? &#0153;</h3> -->

	<h4><%#= link_to @ludicrous_title, @ludicrous_link %></h4>
	<h6><%#= link_to @ludicrous_date, @ludicrous_author_link %></h6>
	<div>
		<a href="<%#= @ludicrous_image %>"><img src="<%#= @ludicrous_image %>"></a>
		<p><%#= link_to @ludicrous_excerpt, @ludicrous_link %></p>
		<p><%#= @full_text %></p>
	</div>

	<div class="row">
		<div class="col-md-7">
		<h3 style="text-align: center; padding-bottom: 10px;">Today's Top Topics</h3>
			<% @soccer_article_container.each do |article| %>
			<div class="articleWrapper">
				<h4><%= link_to article[:title], article[:link] %></h4>
				<h6><%= link_to article[:date], article[:author_link] %></h6>
				<p class="article-style">
					<%= link_to article[:excerpt], article[:link] %>
				</p>
				<%#= image_tag(article[:escaped_title] + ".jpg") %>
			</div>	
			<% end %>
		</div>
		<aside class="col-md-5">
			<h3 style="text-align: center; padding-bottom: 10px;">Posts, Comments, Blather</h3>
			<!-- <section class="user_info">
				<%#= render 'shared/user_info' %>
			</section> -->
			<section class="post_form">
				<%= render 'shared/post_form' %>
			</section>
			<section>
				<h3>posts</h3>
				<%= render 'shared/feed' %>
			</section>
		</aside>
	</div>
</div>

